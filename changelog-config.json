{
	"categories": [
		{
			"title": "Major",
			"labels": ["major"]
		},
		{
			"title": "Minor",
			"labels": ["minor"]
		},
		{
			"title": "Patch",
			"labels": ["patch"]
		},
		{
			"title": "## 🐛 Bug Fixes",
			"labels": ["bug", "bugfix"]
		},
		{
			"title": "Code Improvements",
			"labels": ["improvements", "enhancement"]
		},
		{
			"title": "## 🚀 New Features",
			"labels": ["feature"]
		},
		{
			"title": "Documentation Updates",
			"labels": ["docs", "documentation", "doc"]
		},
		{
			"title": "## 🧪 Tests",
			"labels": ["tests"]
		}
	],
	"ignore_labels": ["draft"],
	"tag_resolver": {
		"method": "semver"
	},
	"base_branches": ["main"],
	"sort": {
		"order": "ASC",
		"on_property": "mergedAt"
	}
}
